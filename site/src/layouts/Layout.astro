---
export type Props = {
	title?: string;
	description?: string;
};

const {
	title = "Guy Abi Hanna",
	description = "AI engineering, agents, and building clean, durable systems.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>

		<style>
			/* Inspired by niels.degran.de: centered, typographic, mono-first, single accent hue */
			:root {
				--background-color: #ffffff;
				--text-color: #0b1220;
				--muted-color: #526074;
				--accent-color: #2f8ee5; /* ocean blue */
				--max: 540px;
				--pad: 22px;
			}

			html {
				display: table;
			}

			html,
			body {
				height: 100%;
				margin: auto;
			}

			body {
				background-color: var(--background-color);
				color: var(--text-color);
				display: table-cell;
				vertical-align: middle;
				font-family: "IBM Plex Mono", ui-monospace, SFMono-Regular, Menlo, Monaco,
					Consolas, "Liberation Mono", "Courier New", monospace;
				padding: var(--pad);
			}

			a {
				color: var(--accent-color);
				text-decoration: none;
				font-weight: 500;
				border-radius: 6px;
				padding: 0 2px;
				transition: color 0.15s ease, box-shadow 0.15s ease;
			}

			a:hover {
				color: var(--text-color);
				box-shadow: inset 0 -0.55em 0 rgba(47, 142, 229, 0.18);
			}

			.box {
				width: 80vw;
				max-width: var(--max);
				position: relative;
			}

			.nav {
				display: flex;
				justify-content: space-between;
				align-items: baseline;
				gap: 12px;
				margin-bottom: 24px;
				flex-wrap: wrap;
			}

			.nav .brand {
				display: inline-flex;
				flex-direction: column;
				gap: 6px;
			}

			.nav .name {
				color: var(--text-color);
				font-weight: 500;
			}

			.nav .name:hover {
				box-shadow: inset 0 -0.55em 0 rgba(47, 142, 229, 0.18);
			}

			.nav .meta {
				color: var(--muted-color);
				font-size: 0.9rem;
			}

			.nav .links {
				display: inline-flex;
				gap: 12px;
				flex-wrap: wrap;
				justify-content: flex-end;
			}

			h1,
			h2,
			h3 {
				color: var(--accent-color);
				font-weight: 500;
				letter-spacing: -0.01em;
			}

			h1 {
				font-size: 300%;
				margin: 0 0 14px 0;
			}

			h2 {
				font-size: 160%;
				margin: 24px 0 12px 0;
			}

			h3 {
				font-size: 120%;
				margin: 22px 0 10px 0;
			}

			@media screen and (max-width: 480px) {
				h1 {
					font-size: 200%;
					word-wrap: break-word;
				}
			}

			p {
				line-height: 1.6;
				margin: 0 0 12px 0;
			}

			article > h1 {
				color: var(--accent-color);
			}

			.small {
				color: var(--muted-color);
				font-size: 0.9rem;
			}

			.blog-entry {
				margin: 1rem 0;
			}

			.blog-date {
				color: var(--text-color);
				opacity: 0.6;
				font-size: 0.9rem;
				margin: 0;
			}

			.section {
				margin: 18px 0 0;
				padding-left: 12px;
				border-left: 2px solid rgba(47, 142, 229, 0.55);
			}

			.list {
				margin-top: 18px;
				display: grid;
				gap: 18px;
			}

			.list-item {
				display: grid;
				gap: 6px;
			}

			.list-item .title {
				color: var(--accent-color);
				font-weight: 500;
				font-size: 1.1rem;
				width: fit-content;
			}

			.list-item .meta {
				color: var(--muted-color);
				font-size: 0.9rem;
			}

			ul,
			ol {
				padding-left: 18px;
				margin: 10px 0;
			}

			.footer {
				margin-top: 28px;
				color: var(--muted-color);
				font-size: 0.85rem;
			}
		</style>
	</head>

	<body>
		<div class="box">
			<header class="nav">
				<div class="brand">
					<a class="name" href="/">Guy Abi Hanna</a>
					<div class="meta">Senior AI Engineer · Paris</div>
				</div>
				<nav class="links">
					<a href="/">Home</a>
					<a href="/about">About</a>
					<a href="/blog">Blog</a>
					<a href="/rss.xml">RSS</a>
				</nav>
			</header>

			<main>
				<slot />
			</main>

			<footer class="footer">
				<div>© {new Date().getFullYear()} Guy Abi Hanna</div>
				<div class="small">Minimal by design. Built with Astro.</div>
			</footer>
		</div>
	</body>
</html>
